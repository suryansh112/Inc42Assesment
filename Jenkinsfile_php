pipeline {

    agent any

    tools {
        dockerTool 'docker'
    }
    environment {
        php = "env.PHP_HOME"
        PHPPATH = "${WORKSPACE}/php"
    }
    stages{
        stage("build") {
            steps {
                echo 'BUILD EXECUTION STARTED'
                sh 'env | sort'
                sh 'php --version'
                sh 'php ${PHPPATH}/index.go'
                sh 'cp ${WORKSPACE}/index ${WORKSPACE}/php'
            }
        }
        stage("Docker Build"){
            steps{
                sh 'docker build -t helloworldphp -f ${PHPPATH}/Dockerfile .'
            }
    }

    }
}
