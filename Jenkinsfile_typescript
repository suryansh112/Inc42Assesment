pipeline {

    agent any

    tools {
        nodejs 'node'
        dockerTool 'docker'
    }
    environment {
        NODEPATH = "${WORKSPACE}/typescript"
    }
    stages{
        stage("build") {
            steps {
                echo 'BUILD EXECUTION STARTED'
                sh 'tsc ${NODEPATH}/app.ts'
                sh 'cp ${WORKSPACE}/app.js ${NODEPATH}'
            }
        }
        stage("Docker Build"){
            steps{
                sh 'docker build -t helloworldnode -f ${NODEPATH}/Dockerfile .'
            }
    }

    }
}
